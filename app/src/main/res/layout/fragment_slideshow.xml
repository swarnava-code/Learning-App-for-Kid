<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="#F8DFB5"
    android:backgroundTint="#F8DFB5"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin"
    tools:context=".ui.slideshow.SlideshowFragment"
    tools:layout_editor_absoluteY="96dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="280sp"
        android:backgroundTint="#F8DFB5"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/img"
            style="@style/image_style_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#F8DFB5"
            android:backgroundTint="#F8DFB5"
            android:padding="10sp"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10sp"
        android:text="Did you like this app?"
        android:textAlignment="center"
        android:textColor="@color/colorGradientCenter"
        android:textSize="38sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/activity_vertical_margin"
        android:text="Please share your views on this application!"
        android:textAlignment="center"
        android:textColor="@color/colorGradientCenter"
        android:textSize="17sp"
        android:textStyle="bold" />

</RelativeLayout>