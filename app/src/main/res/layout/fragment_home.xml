<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/gradient_animation"
    android:id="@+id/background">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="13dp"
        android:backgroundTint="@color/colorGradientStart"
        android:elevation="20dp"
        app:cardCornerRadius="30dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="15dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">


                    <TableRow
                        android:layout_gravity="center"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/play_math"
                            android:layout_margin="2dp"
                            android:layout_height="180dp"
                            android:layout_width="160dp"
                            android:layout_weight="1"
                            android:checkable="true"
                            android:clickable="true"
                            android:elevation="30dp"
                            android:focusable="true"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:background="@drawable/cyan_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/math" />

                                <TextView
                                    android:textColor="@color/homeBtnTxtColor"
                                    android:fontFamily="@font/passero"
                                    android:textSize="20dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/math_title" />
                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/play_english"
                            android:layout_margin="2dp"
                            android:layout_height="180dp"
                            android:layout_width="160dp"
                            android:layout_weight="1"
                            android:checkable="true"
                            android:clickable="true"
                            android:elevation="30dp"
                            android:focusable="true"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:background="@drawable/red_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/english" />

                                <TextView
                                    android:textColor="@color/homeBtnTxtColor"
                                    android:fontFamily="@font/passero"
                                    android:textSize="20dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/english_title" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </TableRow>

                    <TableRow
                        android:layout_gravity="center"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/play_social_story"
                            android:layout_margin="2dp"
                            android:layout_height="180dp"
                            android:layout_width="160dp"
                            android:layout_weight="1"
                            android:checkable="true"
                            android:clickable="true"
                            android:elevation="30dp"
                            android:focusable="true"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:background="@drawable/violet_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginTop="20dp"
                                    android:src="@drawable/logo" />

                                <TextView
                                    android:textColor="@color/homeBtnTxtColor"
                                    android:fontFamily="@font/passero"
                                    android:textSize="20dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/social_story_title" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/funtime"
                            android:layout_margin="2dp"
                            android:layout_height="180dp"
                            android:layout_width="160dp"
                            android:layout_weight="1"
                            android:checkable="true"
                            android:clickable="true"
                            android:elevation="30dp"
                            android:focusable="true"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:background="@drawable/yellow_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="20dp"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/funtime" />

                                <TextView
                                    android:textColor="@color/homeBtnTxtColor"
                                    android:fontFamily="@font/passero"
                                    android:textSize="20dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/fun_time_title" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </TableRow>

                    <!--            <TableRow
                                    android:layout_gravity="center"
                                    android:gravity="center">
                                </TableRow>-->


                </TableLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:elevation="30dp"
                    android:focusable="true"
                    app:cardCornerRadius="18dp"
                    android:backgroundTint="@color/white">
                    <ImageView
                        android:id="@+id/img"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:padding="10sp"
                        style="@style/image_style_1"
                        android:scaleType="fitXY" />
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>