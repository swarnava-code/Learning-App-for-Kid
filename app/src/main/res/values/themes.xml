<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloWorld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#013934</item>
        <item name="colorAccent">@color/colorAccentDay</item>
        <!--<item name="buttonStyle">@style/CustomButton</item>-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDay</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDay</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryDay</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantDay</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryDay</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorAccent">@color/colorAccentDay</item>
    </style>

    <style name="button_style_1" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="fontFamily">@font/passero</item>
    </style>

    <style name="image_style_1">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="textview_style_1">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/logo</item>
    </style>


    <style name="textview_style_2">
        <item name="android:background">@color/tvBgTransparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="cardview_style_1">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/imagesMarginInWordGame</item>
        <item name="elevation">30dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="body_part">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:onClick">bodypartListener</item>
    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="Theme.HelloWorld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HelloWorld.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HelloWorld.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">#FFF</item>
    </style>-->


</resources>